<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- ========== LOGO IMAGE ========== -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:src="@drawable/retrodash_logo" />

            <!-- ===== WELCOME USER TEXT ===== -->
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:text="Yamaha y connect"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- ===== BIKE CARD ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yamaha y connect"
                    android:textColor="#8DA4FF"
                    android:textSize="14sp" />

                <!-- ===== BIKE MODEL ===== -->
                <TextView
                    android:id="@+id/txtBikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Yamaha y connect"
                    android:textColor="#F0EBEB"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- ===== BIKE IMAGE / CONNECT BUTTON ===== -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgBike"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/yamaha_bike"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnConnect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Connect to Bike" />

                </FrameLayout>

                <!-- ===== BIKE PARK LOCATION ===== -->
                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="6dp"
                    android:text="Yamaha y connect"
                    android:textColor="#B5C1D8"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- ========== QUICK ACTIONS ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Yamaha y connect"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- ===== START RIDE ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="6dp"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/startBikeBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/start"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- ===== LOCK BIKE ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="6dp"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/lockBikeBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/lock_bike"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- ===== FIND BIKE ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="6dp"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/findBikeBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/find_bike"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- ===== NAVIGATION ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="6dp"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/navigateBikeBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/navigate"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp" />
                </LinearLayout>

            </GridLayout>

            <!-- ========== TODAY'S STATUS ========== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yamaha y connect"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <!-- ========== STATUS CARD ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- ===== KILOMETER ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtKmToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="km today"
                        android:textColor="#B5C1D8"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- ===== MINUTES ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="minutes"
                        android:textColor="#B5C1D8"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- ===== AVERAGE ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtAvgSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yamaha y connect"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="km/h avg"
                        android:textColor="#B5C1D8"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ========== LAST RIDE CARD ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yamaha y connect"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Yamaha y connect"
                    android:textColor="#B5C1D8"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Yamaha y connect"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="Distance: 15 km"
                        android:textColor="#B5C1D8"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 35 min"
                        android:textColor="#B5C1D8"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        app:itemIconTint="@color/text_secondary"
        app:itemTextColor="@color/text_secondary"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>